extends base/fullpage.jade

block vars
  - var title = "Main";

block include
  link(rel="stylesheet", href="css/netjsongraph.min.css")
  link(rel="stylesheet", href="css/netjsongraph-theme.min.css")
  link(rel="stylesheet", href="css/main.min.css")
  script(src="js/d3.min.js")
  script(src="js/netjsongraph.min.js")
  script(src="js/main.min.js")
  
block content
  div.wrapper-full#network-graph
    div.search-bar
      input#search(placeholder="enter a node name",onkeydown="if(event.keyCode==13) search_node();")
      span(onclick="search_node()")
        +icon('fa-search')
